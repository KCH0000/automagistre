{% extends '@EasyAdmin/default/show.html.twig' %}

{# @var entity \AppBundle\Entity\Order #}

{% block main %}
    <section id="main" class="content">
        <div class="row">
            <div class="field-group col-xs-12 col-sm-6">
                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-title">
                            Основная информация
                        </h3>
                    </div>

                    <div class="box-body">
                        <div class="form-horizontal">
                            <div class="form-group field-association ">
                                <label class="col-sm-2 control-label">Клиент</label>

                                <div class="col-sm-10">
                                    <div class="form-control">
                                        {{ entity.client.person.fullName }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-horizontal">
                            <div class="form-group field-association ">
                                <label class="col-sm-2 control-label">Автомобиль</label>

                                <div class="col-sm-10">
                                    <div class="form-control">
                                        {{ entity.car }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-horizontal">
                            <div class="form-group field-association ">
                                <label class="col-sm-2 control-label">Пробег</label>

                                <div class="col-sm-10">
                                    <div class="form-control">
                                        {{ entity.mileage }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="field-group col-xs-12 col-sm-6">
                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-title">
                            Описание
                        </h3>
                    </div>

                    <div class="box-body">
                        <div class="form-horizontal">
                            <div class="form-group field-association ">
                                <label class="col-sm-2 control-label">Описание</label>

                                <div class="col-sm-10">
                                    <div class="form-control">
                                        {{ entity.description }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>Наименование</th>
                            <th>Исполнитель / Артикул</th>
                            <th>Цена</th>
                            <th>Итого</th>
                            <th>Склад</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for part in entity.rootParts %}
                            <tr>
                                <td><i class="fa fa-cog" aria-hidden="true"></i> {{ part.part.name }}</td>
                                <td>{{ part.part.partnumber }}</td>
                                <td>{{ part.quantity }} * {{ part.cost }}</td>
                                <td>{{ part.totalCost }}</td>
                                <td>-</td>
                            </tr>
                        {% endfor %}
                        {% for service in entity.services %}
                            <tr>
                                <td><i class="fa fa-wrench" aria-hidden="true"></i> {{ service.service.name }}</td>
                                <td>{{ service.user }}</td>
                                <td></td>
                                <td>{{ service.cost }} / {{ service.partsCost }}</td>
                                <td>-</td>
                                {% for part in service.orderParts %}
                                    {# @var part \AppBundle\Entity\OrderPart #}
                                    {{ '</tr><tr>' }}

                                    <td style="padding-left: 40px">
                                        <i class="fa fa-cog" aria-hidden="true"></i> {{ part.part.name }}
                                    </td>
                                    <td>{{ part.part.partnumber }}</td>
                                    <td>{{ part.quantity }} * {{ part.cost }}</td>
                                    <td>{{ part.totalCost }}</td>
                                    <td>-</td>
                                {% endfor %}
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </section>

{% endblock %}

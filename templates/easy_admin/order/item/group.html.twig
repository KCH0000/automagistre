{% import 'easy_admin/macro/icon.html.twig' as icon %}

{# @var item \App\Entity\OrderItemGroup #}

<tr>
    <td style="{% include 'easy_admin/order/item/padding.html.twig' with {'level': level} %}">
        <i class="fa fa-folder"></i>

        {{ item.name }}

        {% if order.editable %}
            {{ icon.link('folder', easyadmin_path('OrderItemGroup', {'order_id': order.id, 'parent_id': item.id})) }}

            {{ icon.link('wrench', easyadmin_path('OrderItemService', {'order_id': order.id, 'parent_id': item.id})) }}

            {{ icon.link('barcode', easyadmin_path('OrderItemPart', {'order_id': order.id, 'parent_id': item.id})) }}
        {% endif %}
    </td>
    <td></td>
    <td></td>
    <td>{{ item.totalServicePrice|localize_money }} / {{ item.totalPartPrice|localize_money }}</td>
    {% if order.editable %}
        <td>-</td>
        <td>
            {{ icon.link('pencil', item|easyadmin_path) }}
        </td>
    {% endif %}
</tr>

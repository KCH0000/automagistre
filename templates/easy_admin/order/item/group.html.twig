{% import 'easy_admin/macro/icon.html.twig' as icon %}

{# @var item \App\Entity\OrderItemGroup #}

<tr>
    <td style="{% include 'easy_admin/order/item/padding.html.twig' with {'level': level} %}">
        <i class="fa fa-folder"></i>

        {{ item.name }}

        {% if order.editable %}
            <a href="{{ easyadmin_path('OrderItemGroup', 'new', {'order_id': order.id, 'parent_id': item.id}) }}">
                <i class="fa fa-folder"></i>
            </a>
            <a href="{{ easyadmin_path('OrderItemService', 'new', {'order_id': order.id, 'parent_id': item.id}) }}">
                <i class="fa fa-wrench"></i>
            </a>
            <a href="{{ easyadmin_path('OrderItemPart', 'new', {'order_id': order.id, 'parent_id': item.id}) }}">
                <i class="fa fa-barcode"></i>
            </a>
        {% endif %}
    </td>
    <td></td>
    <td></td>
    <td>{{ item.totalServicePrice|localize_money }} / {{ item.totalPartPrice|localize_money }}</td>
    {% if order.editable %}
        <td>-</td>
        <td>
            <a href="{{ easyadmin_path(item, 'edit') }}">
                <i class="fa fa-pencil"></i>
            </a>
        </td>
    {% endif %}
</tr>
